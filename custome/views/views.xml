<odoo>
  <data>


    <record model="ir.ui.view" id="sale_order_view_inherit">
      <field name="name">sale.order.view.inherit1</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='payment_term_id']" position="after">
          <field name="sale_mode"/>
          <field name="tesxt"/>
          
        </xpath>
        <xpath expr="//page[@name='customer_signature']" position="after">
          <!-- attrs="{'invisible': [('require_signature', '=', False)]}" -->
          <page string="Total Gold" name="total_gold" >
            <group>
                <group>
                  
                  <field name="k9"  readonly="1" force_save="1" />
                  <field name="k12" readonly="1" force_save="1" />
                  <field name="k14" readonly="1" force_save="1" />
                  <field name="k18" readonly="1" force_save="1" />
                  <field name="k21" readonly="1" force_save="1" />
                  <field name="k22" readonly="1" force_save="1" />
                  <field name="k24" readonly="1" force_save="1" />


                </group>
                <group>
                <!-- karats -->
                  <field name="c_karat"  readonly="1" force_save="1" string="Converted Karat Weight (G)"/>
                  


                </group>
            </group>
        </page>
        </xpath>
        <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_id']" position="before">
          <field name="serial"/>
        </xpath>

       <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_uom']" position="after">
          <field name="making_price" readonly="1" force_save="1"/>
        </xpath>

        <xpath expr="//page/field[@name='order_line']/tree/field[@name='name']" position="attributes">
          <attribute name="invisible">1</attribute>
        </xpath>

        <xpath expr="//page/field[@name='order_line']/tree/field[@name='price_unit']" position="attributes">
          <attribute name="invisible">1</attribute>
        </xpath>

        <xpath expr="//page/field[@name='order_line']/tree/field[@name='price_unit']" position="attributes">
          <attribute name="invisible">1</attribute>
        </xpath>

        <!-- <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_uom_qty']" position="attributes">
          <attribute name="invisible">1</attribute>
        </xpath> -->

        <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">
          <field name="karats" readonly="1" force_save="1"/>
          <field name="c_karats" readonly="1" force_save="1"/>

          <field name="sale_sale" invisible="1"/>

          <field name="gold_price"  readonly="1" force_save="1"/>
          <field name="weight"  readonly="1" force_save="1"/>
        </xpath>
      </field>
    </record>
  
    <record model="ir.ui.view" id="sale_advance_payment_inv_inherit1">
      <field name="name">sale.advance.payment.inv.inherit</field>
      <field name="model">sale.advance.payment.inv</field>
      <field name="inherit_id" ref="sale.view_sale_advance_payment_inv"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='advance_payment_method']" position="after">
          <field name="karats" />
        </xpath>
        
      </field>
    </record> 
