<odoo>
  <data>


    <record model="ir.ui.view" id="sale_order_view_inherit">
      <field name="name">sale.order.view.inherit1</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
        <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_id']" position="before">
          <field name="serial"/>
        </xpath>
        <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_id']" position="after">
          <field name="karats"/>

        </xpath>
        <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">
          <field name="net_weight"/>
          <field name="making_price"/>
          <field name="gold_price"/>

        </xpath>
      </field>
    </record>


    <record model="ir.ui.view" id="purchase_order_view_inherit">
      <field name="name">purchase.order.view.inherit1</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form"/>
      <field name="arch" type="xml">
       
        <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_qty']" position="before">
                <field name="karats" />
                <field name="gold_price" />
               
        </xpath>
      </field>
  </record>

  <record model="ir.ui.view" id="product_view_inherit3">
    <field name="name">product.view.inherit</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='barcode']" position="after">
        <field name="karat" />
        <field name="karat2" />
        <field name="has_stones"/>
        <field name="has_stones_price"/>
        

      </xpath>
    </field>
  </record>
 


