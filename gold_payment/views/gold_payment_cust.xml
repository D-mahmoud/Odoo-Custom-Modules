<odoo>
    <data>
        <record model="ir.ui.view" id="gold_payment_cust">
            <field name="name">Gold Payment for Customer</field>
            <field name="model">gold.payment.customer</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="customer"/>
                    <field name="product"/>
                    <field name="warehouse"/>
                    <field name="debit_qty"/>
                    <field name="credit_qty"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="gold_payment_cust_form">
            <field name="name">Gold Payment for Customer</field>
            <field name="model">gold.payment.customer</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form string="gold payment form">
              
                    <group colspan="2" col="2">
                        <separator string="Payment Info" colspan="2"/>
                        <field name="customer"/>
                        <field name="product"/>
                        <field name="warehouse"/>
                        <field name="debit_qty"/>
                        <field name="credit_qty"/>
                    </group>
                
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="gold_payment.gold_pay_cust">
            <field name="name">Gold Payment for Customer</field>
            <field name="res_model">gold.payment.customer</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem name="Gold Payment for Customer" id="gold_payment.gold_payment_list" parent="sale.sale_order_menu" action="gold_payment.gold_pay_cust"/>
    </data>
</odoo>